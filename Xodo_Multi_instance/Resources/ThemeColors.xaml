            <SolidColorBrush x:Key="ThemeBrushSecondaryDark" Color="{StaticResource ThemeColorSecondarySimilarBrightness}"/>
            <SolidColorBrush x:Key="ThemeBrushSecondaryMedium" Color="{StaticResource ThemeColorSecondaryMediumBrightness}"/>
            <SolidColorBrush x:Key="ThemeBrushSecondaryLight" Color="{StaticResource ThemeColorSecondaryDifferentBrightness}"/>
